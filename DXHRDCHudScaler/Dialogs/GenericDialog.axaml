<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DXHRDCHudScaler.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DXHRDCHudScaler.Dialogs.GenericDialog"
        x:DataType="vm:GenericDialogViewModel"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        Title="{Binding WindowTitle}">
    
    <Design.DataContext>
        <vm:GenericDialogViewModel />
    </Design.DataContext>
    
    <StackPanel>
        <Grid ColumnDefinitions="*,*">
            <Image Source="../Assets/exclamation-mark.png" Width="48" Height="48" />
            <Label Grid.Column="1" Content="{Binding Title}" />
        </Grid>
        <Label Content="{Binding Message}" />
        <Grid ColumnDefinitions="Auto">
            <Button x:Name="OkBtn" Content="Ok" Click="OkBtn_OnClick" />
        </Grid>
    </StackPanel>
</Window>
