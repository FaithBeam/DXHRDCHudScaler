<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DXHRDCHudScaler.ViewModels"
             xmlns:dialogHost="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
             x:DataType="vm:ExtrasTabViewModel"
             x:Class="DXHRDCHudScaler.Tabs.ExtrasTabView">
    <Design.DataContext>
        <vm:ExtrasTabViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto">
        <Grid ColumnDefinitions="Auto,Auto,Auto,Auto">
            <CheckBox Grid.Column="0" IsEnabled="{Binding SkipIntroVideosCheckboxEnabled}"
                      IsChecked="{Binding SkipIntroVideosCheckboxChecked}" Content="Skip Intro Videos" />
        </Grid>
        <Grid Grid.Row="1">
            <Button HorizontalAlignment="Right" Content="Apply" IsEnabled="{Binding ApplyBtnEnabled}"
                    Command="{Binding ApplyCmd}" />
        </Grid>
    </Grid>
</UserControl>